use Mageplaza\Blog\Block\Post\RelatedPost;
use Mageplaza\Blog\Model\ResourceModel\Post\Collection;

/** @var Collection $posts */
/** @var RelatedPost $block */
$posts = $block->getRelatedPostList();
if ($posts && $block->isEnabledBlog()) : ?>
    <h2 class="text-xl"><?= $posts->getSize() ? $block->escapeHtml(__('Related Posts')) : $block->escapeHtml(__('No Related Posts')) ?></h2>
    <?php if ($block->getRelatedMode()) : ?>
        <div class="mp-blog-owl-carousel ">
            <section id="relatedposts-carousel" class="splide" aria-label="Related Posts">
                <div class="splide__track">
                    <ul class="splide__list">
                        <?php foreach ($posts as $post) : ?>
                            <li class="splide__slide">
                                <div class="item post-list-item col-mp post-item-list mp-4">
                                    <div class="post-item-wraper">
                                        <div class="post-info-wraper">
                                            <a href="<?= $block->escapeUrl($post->getUrl()) ?>">
                                                <img class="img-responsive"
                                                     src="<?= $block->escapeUrl($block->resizeImage($post->getImage(),
                                                         '400x')) ?>"
                                                     alt="<?= $block->escapeHtml($post->getName()); ?>"/>
                                            </a>
                                            <h2 class="mp-post-title" style="margin: 20px 0;">
                                                <a class="post-link-title"
                                                   title="<?= $block->escapeHtml($post->getName()); ?>"
                                                   href="<?= $block->escapeUrl($post->getUrl()) ?>">
                                                    <?= $block->escapeHtml($post->getName()) ?>
                                                </a>
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <?php endforeach; ?>
                    </ul>
                </div>
            </section>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                new Splide('#relatedposts-carousel', {
                    perPage: 3,
                    breakpoints: {
                        1028: {
                            perPage: 2
                        }
                    }
                }).mount();
            });
        </script>
    <?php else : ?>
        <ul class="relatedposts-list" style="list-style-type:disc; padding-left: 30px">
            <?php foreach ($posts as $post) : ?>
                <li>
                    <a href="<?= $block->escapeUrl($post->getUrl()) ?>"><?= $block->escapeHtml($post->getName()) ?></a>
                </li>
            <?php endforeach; ?>
        </ul>
    <?php endif; ?>
<?php endif; ?>
