/** @var \Mageplaza\Blog\Helper\Data $helper */
$helper = $this->helper(\Mageplaza\Blog\Helper\Data::class);
?>

<?php if ($helper->isEnabled()): ?>
    <?php if ($helper->getBlogConfig('general/footer')): ?>
        <li>
            <a <?php echo $block->getLinkAttributes() ?>>
                <?php echo $block->escapeHtml($block->getLabel()); ?>
                <?php echo ($block->getCounter()) ? '<span>' . $block->escapeHtml($block->getCounter()) . '</span>' : ''; ?>
            </a>
        </li>
    <?php endif; ?>
    <?php if ($helper->getBlogConfig('general/display_sitemap')): ?>
        <li>
            <a href="<?php echo $block->getHtmlSiteMapUrl() ?>">
                <?php echo $block->escapeHtml('SiteMap'); ?>
                <?php echo ($block->getCounter()) ? '<span>' . $block->escapeHtml($block->getCounter()) . '</span>' : ''; ?>
            </a>
        </li>
    <?php endif; ?>
<?php endif; ?>
