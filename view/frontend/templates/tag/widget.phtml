use Mageplaza\Blog\Block\Tag\Widget;

/** @var Widget $block */
$tags = $block->getTagList();

if ($tags && $tags->getSize()) : ?>
    <div class="mp-sidebar mpcss">
        <div class="row">
            <div class="block-title col-xs-12 sidebar-tags">
                <p class="block-mp-sidebar-heading" role="heading" aria-level="2"><?= $block->escapeHtml(__('Tags')) ?></p>
            </div>
            <div class="col-xs-12">
                <?php foreach ($tags as $tag) : ?>
                    <a class="label label-default tags-list"
                       style="font-size:<?= $block->escapeHtmlAttr($block->getTagSize($tag)) . 'px'; ?>"
                       href="<?= $block->escapeUrl($block->getTagUrl($tag)) ?>">
                        <?= $block->escapeHtml($tag->getName()) ?>
                    </a>
                <?php endforeach; ?>
            </div>
        </div>
    </div>
<?php endif; ?>
